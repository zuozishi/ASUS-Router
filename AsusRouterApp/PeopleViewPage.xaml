            <PivotItem x:Uid="TopBtn4Pivot">
                <ScrollViewer>
                    <ListView x:Name="listview_wanInfo" SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,3"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListViewItem>
                            <Grid>
                                <TextBlock x:Uid="Info" Foreground="{ThemeResource MainThemeColor}" FontWeight="Bold"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <TextBlock x:Uid="InfoModel" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Right" Width="150" Text="{Binding model}"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <TextBlock x:Uid="InfoMAC" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Right" Width="150" Text="{Binding mac}"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <TextBlock x:Uid="InfoPublicNetIP" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Right" Width="150" Text="{Binding ipaddr}"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <TextBlock x:Uid="InfoLanIP" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Right" Width="150" Text="192.168.1.1"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <TextBlock x:Uid="InfoDDNS" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Right" Width="150" Text="{Binding ddns}"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <TextBlock x:Uid="InfoStatus" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextColor}" FontWeight="Bold" HorizontalAlignment="Right" Width="150" Text="{Binding statusstr}"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <CheckBox x:Name="toastTaskCheckBox" Foreground="{ThemeResource TextColor}" HorizontalAlignment="Center" Click="ToastTaskChecked">
                                    <TextBlock x:Uid="BlackDevToastText" Foreground="{ThemeResource TextColor}"/>
                                </CheckBox>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Button Click="RebootBtn_Click" Foreground="{ThemeResource TextColor}" Style="{StaticResource ButtonStyle1}" Background="{ThemeResource MainThemeColor}">
                                    <TextBlock Margin="10" x:Uid="Reboot" HorizontalAlignment="Center"/>
                                </Button>
                            </Grid>
                        </ListViewItem>
                    </ListView>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
        <controls:InAppNotification x:Name="notification" BorderBrush="{ThemeResource MainThemeColor}"/>
        <controls:InAppNotification x:Name="notificationError" Background="#FFFF5656" BorderBrush="{ThemeResource MainThemeColor}"/>
    </Grid>
</Page>
